# .screenrc
#

escape "^T^T"           # use C-t instead of C-a (used in Emacs)
startup_message off
hardstatus alwayslastline
hardstatus string "%-w%{= BW}%50>%n %t%{-}%+w%<"
nonblock on
altscreen on
attrcolor b ".I"
term xterm-256color
defscrollback 3000
defbce "on"
shell -$SHELL
split
screen -t top 0
screen -t bottom 1
focus
resize 15
select 0
focus up
vbell on
vbell_msg "!?!"
vbellwait 1
